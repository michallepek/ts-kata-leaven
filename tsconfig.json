{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2017",
    "module": "commonjs",
    "allowJs": false,
    "sourceMap": true,
    "outDir": "dist",

    /* Strict Type-Checking Options */
    "strict": false,
    "noImplicitUseStrict": true,
    "lib": ["es2017"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test/**/*.ts"
  ]
}
